extends layout

block content
        h2.page-header Register
        p Please register using the form below
        if errors
            each error, i in errors
                div.alert.alert-danger #{error.msg}
        form(method='post', action='/users/register')
            .form-group
                lable Name
                input.form-control(name='name', type='text', placeholder='Enter Name')
            .form-group
                lable Email
                input.form-control(name='email', type='email', placeholder='Enter Email')
            .form-group
                lable Username
                input.form-control(name='username', type='text', placeholder='Enter Username')
            .form-group
                lable Password
                input.form-control(name='password', type='text', placeholder='Enter Password')
            .form-group
                lable PasswordEncrypted
                textarea#comment.form-control(rows='2') #{encryptedPass}
            .form-group
                lable Private Key
                textarea#comment.form-control(rows='7') #{keyPrivateString}
            .form-group
                lable Public Key
                textarea#comment.form-control(rows='5') #{keyPublicString}
            input.btn.btn-primary(type='submit', name='submit', value='Register')
        p
            p #{name}
            p #{mail}
            p #{username}
            p #{hash}
